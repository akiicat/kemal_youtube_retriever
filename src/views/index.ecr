<html>
  <head>
    <title>Youtube Retriever</title>
    <meta charset="utf-8">
    <meta name="keywords" content="youtube, download, retriever">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <script src="https://unpkg.com/vue"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', '<%= ENV["GA"] %>', 'auto');
      ga('send', 'pageview');

    </script>
  </head>
  <body>

    <div id="youtube">
      <header>
        <h1>YOUTUBE RETRIEVER</h1>
        <div>
          <input type="text" placeholder="Youtube 影片連結" v-model="url" @key.enter="send">
          <button type="button" @click="send">RETRIEVE</button>
        </div>
      </header>

      <div v-if="video.title">
        <streams-detail :video="video"></streams-detail>

        <streams-content :streams="this.getStreams()" title="VIDEO + AUDIO"></streams-content>
        <streams-content :streams="this.getStreams('video only')" title="VIDEO ONLY"></streams-content>
        <streams-content :streams="this.getStreams('audio only')" title="AUDIO ONLY"></streams-content>
      </div>

      <github-footer :github_url="github_url"></github-footer>
    </div>

    <script src="/javascripts/application.js"></script>
  </body>
</html>
